<h1>投稿一覧</h1>

<% @posts.each do |post| %>
  <div>
    <h2><%= link_to post.title, post_path(post) %></h2>

    <p><%= image_tag post.photo if post.photo.attached? %></p>
    <p><%= post.content %></p>
    <p>投稿者: <%= post.user.name %></p>
  </div>
<% end %>

<%= link_to 'マイページへ戻る', mypage_path %>
<h2>新規投稿</h2>

<%= form_with(model: @post, url: posts_path, local: true) do |form| %>
  <div class="field">
    <%= form.label :タイトル %><br>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :投稿内容 %><br>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :投稿画像 %><br>
    <%= form.file_field :photo %>
  </div>


  <div class="actions">
    <%= form.submit "投稿する" %>
  </div>
<% end %>
